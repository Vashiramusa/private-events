<h2>Create new event</h2>
<%= form_for @event, url: events_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :date %>
  <%= f.date_select(:date, :order => [:month, :day, :year]) %>

  <%= f.submit 'Create event' %>
<% end %>