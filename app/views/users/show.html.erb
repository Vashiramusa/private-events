<div class="row">
  <aside>
    <section class="user_info">
      <h1>Name: <%= @user.name %></h1>
      <h3>Username: <%= @user.username %></h3>
    </section>
  </aside>

  <div>
   <h4 class="index-heading">Created Events</h4>
   <%= render 'user_events', events: @user.created_events %>
  </div>

  <div>
   <h4 class="index-heading">Attending Events</h4>
   <%= render 'user_events', events: @user.attending_events %>
  </div>
</div>